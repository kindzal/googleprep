    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/a.exe",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "build",
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\tools\\MinGW\\bin\\gdb.exe",
            "miDebuggerArgs": "--silent",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Reduce gdb verbosity",
                    "text": "set print thread-events of",
                    "ignoreFailures": true
                  }
            ]
        }
    ]
}